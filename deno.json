{
  "importMap": "./import_map.json",
  "tasks": {
    "test": {
      "dependencies": [
        "test:doc",
        "test:parallel"
      ]
    },
    "test:parallel": "deno task test:sequential -- --parallel",
    "test:sequential": "deno test --allow-all --coverage --trace-leaks --clean",
    "test:doc": "deno test --allow-all --coverage --trace-leaks --clean --doc",
    "lint": {
      "dependencies": [
        "lint:deno",
        "lint:import-map",
        "lint:labeler",
        "lint:title",
        "lint:readme",
        "lint:deps"
      ]
    },
    "lint:deno": "deno lint",
    "lint:fmt": "deno fmt --check",
    "lint:import-map": "deno run -A _tools/check_import_map.ts",
    "lint:labeler": "deno run -A _tools/check_labeler.ts",
    "lint:title": "deno run -A _tools/check_title.ts",
    "lint:readme": "deno run -A _tools/check_readme.ts",
    "lint:deps": "deno run -A _tools/check_deps.ts",
    "cov": "deno coverage --ignore=\"**/*.generated.mjs,**/_test_utils.ts,.github\"",
    "cov:gen": "deno task cov --lcov --output=cov.lcov",
    "cov:view": "deno task cov --html",
    "bump": "deno run -A jsr:@deno/bump-workspaces@^0.1/cli --import-map import_map.json",
    "setup:hooks": "cp scripts/pre-push .git/hooks/pre-push && chmod +x .git/hooks/pre-push && echo 'Git hooks installed successfully'",
    "bench": "deno bench --allow-all",
    "bench:json": "deno bench --allow-all --json"
  },
  "exclude": [
    ".git",
    "cov",
    "coverage",
    "docs",
    "CLAUDE.md",
    "**/_deps.snap"
  ],
  "workspace": [
    "./packages/binstruct",
    "./packages/binstruct-cli",
    "./packages/binstruct-ethernet",
    "./packages/binstruct-png",
    "./packages/binstruct-wav",
    "./packages/wg-keys",
    "./packages/wg-ini",
    "./packages/wg-conf",
    "./packages/mymagti-api",
    "./packages/bx",
    "./packages/routeros-api",
    "./packages/tplink-api",
    "./packages/ip",
    "./packages/crc"
  ]
}
